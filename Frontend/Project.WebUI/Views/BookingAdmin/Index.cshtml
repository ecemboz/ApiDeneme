@model List<ResultBookingDto>

@{
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}
<style>
    .table td.actions {
        width: 20%;
    }
</style>

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Rezervasyonlar</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir Adı</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Durum Değiştir</th>
                        </tr>
                    </thead>
                    <tbody>

						@foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.CheckIn).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                                <td><span class="badge badge-primary px-2">@item.Status</span></td>
                                <td class="actions">
                                    <span>
                                        <a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn btn-outline-primary"><i class="fa fa-check"></i> Onayla</a>
                                        <a href="/BookingAdmin/CancelReservation/@item.BookingID" class="btn btn-outline-danger"><i class="fa fa-times"></i> İptal Et</a>
                                        <a href="/BookingAdmin/WaitReservation/@item.BookingID" class="btn btn-outline-warning"><i class="fa fa-pause"></i> Beklet</a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>