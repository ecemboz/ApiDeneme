@model List<ResultGuestDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-6 mx-auto">
    <div class="card">
        <div class="card-body">
            <a href="/Guest/AddGuest/" class="btn btn-primary float-right">Yeni Müşteri Girişi</a>
            <div><br /></div>
            <div><br /></div>
            <h4 class="card-title">MİSAFİR LİSTESİ</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-striped verticle-middle">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ad</th>
                            <th scope="col">Soyad</th>
                            <th scope="col">Şehir</th>
                            <th scope="col">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.City</td>
                                <td>
                                    <span>
                                        <a href="/Guest/UpdateGuest/@item.GuestID" data-toggle="tooltip" data-placement="top" class="btn btn-outline-info"><i class="fa fa-edit"></i> Güncelle</a>
                                        <a href="/Guest/DeleteGuest/@item.GuestID" data-toggle="tooltip" data-placement="top" class="btn btn-outline-danger"><i class="fa fa-times"></i> Sil</a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
