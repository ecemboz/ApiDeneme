@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="col-lg-6 mx-auto">
    <div class="card">
        <div class="card-body">
            <div></br></div>
            <div></br></div>
            <h4 class="card-title">PERSONEL BİLGİLERİNİ GÜNCELLEME</h4>
            <form method="post">
                <input type="hidden" asp-for="StaffID"/>
                <label>Personel Adı</label>
                <input type="text" asp-for="Name" class="form-control" />
                </br>
                <label>Personel Unvanı</label>
                <input type="text" asp-for="Title" class="form-control" />
                </br>
                <label>Sosyal Medya 1</label>
                <input type="text" asp-for="SocialMedia1" class="form-control" />
                </br>
                <label>Sosyal Medya 2</label>
                <input type="text" asp-for="SocialMedia2" class="form-control" />
                </br>
                <label>Sosyal Medya 3</label>
                <input type="text" asp-for="SocialMedia3" class="form-control" />
                </br>

                <button class="btn btn-primary float-right">Kaydet</button>
            </form>
        </div>
    </div>
</div>
